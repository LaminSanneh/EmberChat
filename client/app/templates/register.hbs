{{outlet}}
<form {{action 'registerSubmitted' username password on='submit' }} >
    <div class="form-group">
        <label for="username">Username</label>
      {{ input value=username class="form-control" }}
    </div>
    <div class="form-group">
        <label for="password">Password</label>
      {{ input type='password' value=password class="form-control" }}
    </div>
    <button type="submit" class="btn btn-default pull-right">Register</button>
</form>
