{{outlet}}
<form {{action 'registerSubmitted' username password on='submit' }} >
    <div class="form-group">
        <label for="username">Username</label>
      {{ input value=username class="form-control" }}
    </div>
    <div class="form-group">
        <label for="password">Password</label>
      {{ input type='password' value=password class="form-control" }}
    </div>
    <div class="container-fluid">
      <div class="row">
        <button type="submit" class="btn btn-default pull-right">Register</button>
      </div>
      <div class="row">
        &nbsp;
      </div>
      <div class="row">
        {{#link-to 'login' class='pull-right login-form__register-link' }}
            <span>&nbsp;</span>Login
        {{/link-to}}
      </div>
    </div>
</form>
